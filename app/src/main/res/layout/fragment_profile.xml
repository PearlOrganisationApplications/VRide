<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fregment.Profile">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/choose_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="40dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:padding="8dp"
                                android:textStyle="bold"
                                android:text="Update Profile"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/show_selfiee"
                                android:layout_width="121dp"
                                android:layout_height="106dp"
                                android:layout_margin="10dp"
                                android:padding="2dp"
                                android:src="@mipmap/logo" />

                        </LinearLayout>

                      <!--  <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/driver_nameTL"
                            android:layout_width="350dp"
                            android:layout_height="50dp"
                            android:layout_margin="12dp">

                            <EditText
                                android:id="@+id/show_drivername"
                                android:layout_width="350dp"
                                android:layout_height="50dp"
                                android:background="@drawable/signup_edittext"
                                android:hint="Name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="15dp"
                                android:textSize="13sp"
                                tools:ignore="TouchTargetSizeCheck" />-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/nameTL"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full Name"
                            app:startIconDrawable="@drawable/ic_person"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="15dp"
                                android:textSize="13sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
<!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/driver_emailTL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <EditText
                                android:id="@+id/show_driveremail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/signup_edittext"
                                android:hint="Email-id."
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="15dp"
                                android:textSize="13sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>
-->

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/emailTL"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email-id"
                            app:startIconDrawable="@drawable/ic_email"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:padding="15dp"
                                android:textSize="13sp"/>

                        </com.google.android.material.textfield.TextInputLayout>

<!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/driver_mobilenoTL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <EditText
                                android:id="@+id/show_drivermobileno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/signup_edittext"
                                android:hint="Mobile No."
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="15dp"
                                android:textSize="13sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>
-->

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/mobileTL"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile No"
                            app:startIconDrawable="@drawable/ic_baseline_phone_"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="10"
                                android:padding="15dp"
                                android:textSize="13sp"/>

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/dobTLc"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="DOB"
                            app:startIconDrawable="@drawable/ic_baseline_calendar_month_24"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="10"
                                android:padding="15dp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="13sp"/>

                        </com.google.android.material.textfield.TextInputLayout>

<!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/DriverPanNoTL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <EditText
                                android:id="@+id/show_driverPanNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/signup_edittext"
                                android:hint="PAN Number"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLength="10"
                                android:padding="15dp"
                                android:textSize="13sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/pancardTL"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pan Card No"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:textAllCaps="true"
                                android:inputType="textCapCharacters"
                                android:maxLength="8"
                                android:padding="15dp"
                                android:textSize="13sp"/>

                        </com.google.android.material.textfield.TextInputLayout>



<!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/DriverAadharNoTL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <EditText
                                android:id="@+id/show_driverAdharNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/signup_edittext"
                                android:hint="Aadhar Number"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="12"
                                android:padding="15dp"
                                android:textSize="13sp"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        </com.google.android.material.textfield.TextInputLayout>
-->

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/aadharCardTL"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Aadhar Card No"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone"
                                android:textAllCaps="true"
                                android:inputType="numberDecimal"
                                android:maxLength="12"
                                android:padding="15dp"
                                android:textSize="13sp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/ll_aadhar_front"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/aadharfrontIV"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:padding="2dp"

                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/up_adharfront"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:padding="2dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/aadharfrontTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="Adhar Front"
                                    android:textAlignment="center"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_aadhar_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/aadharBackIV"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:padding="2dp"

                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/up_adharback"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:padding="2dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="Adhar Back"
                                    android:textAlignment="center"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/police_verification"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_police_verification"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:padding="2dp"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="Police Verification"
                                    android:textAlignment="center"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/updateButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="12dp"
                            android:backgroundTint="@color/color_secondary"
                            android:text="Update Profile"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent" />

                    </LinearLayout>
                </ScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>



