    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/card_bg"

        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


             <!--   <ImageView
                    android:id="@+id/cancelLang"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:src="@drawable/close"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:tint="#B1AFAF"/>-->



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Language"
                android:textStyle="bold"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/alata"
                android:gravity="center"/>



            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/hindiLL"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/hindi"/>

                    <TextView
                        android:id="@+id/btnHindiLang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lang_hindi"
                        android:checked="false"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        />

                </LinearLayout>
                <!--<View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:background="@color/black"/>-->
                <LinearLayout
                    android:id="@+id/englishLL"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/eng"/>

                    <TextView
                        android:id="@+id/btnEngLang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lang_eng"
                        android:checked="false"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_13ssp"
                        />

                </LinearLayout>

            </LinearLayout>




            <TextView
                android:id="@+id/cancelLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:gravity="end"
                android:layout_gravity="end"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/color_secondary"
                android:paddingEnd="@dimen/_10sdp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

