<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pearl.v_ride.DocumentActivity">

    <include
        android:id="@+id/appbarD"
        layout="@layout/custom_appbar"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/outerLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarD"
        app:layout_constraintBottom_toBottomOf="@+id/updateBT"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aadharTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aadhar card"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:elevation="12dp"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView

                                    android:id="@+id/addAadharFront"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/add"
                                    android:visibility="visible" />

                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/dummy_aadhar"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:elevation="12dp"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView

                                    android:id="@+id/addAadharBack"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/add"
                                    android:visibility="gone" />

                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/dummy_aadhar"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>




                <TextView
                    android:id="@+id/pancardTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pan card"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="230dp"
                        app:cardCornerRadius="15dp"
                        android:elevation="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:id="@+id/addPancard"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/add"
                                android:visibility="gone"/>
                            <ImageView
                                android:layout_width="350dp"
                                android:layout_height="200dp"
                                android:src="@drawable/dummy_pancard"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/licenceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driving Licence"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="230dp"
                        app:cardCornerRadius="15dp"
                        android:elevation="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:id="@+id/addLicence"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/add"
                                android:visibility="visible"/>
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="350dp"
                                android:layout_height="200dp"
                                android:src="@drawable/dummy_dl"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/bankPassbookTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank Passbook"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="230dp"
                        app:cardCornerRadius="15dp"
                        android:elevation="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/addPassbook"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/add"
                                android:visibility="visible" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/updateBT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Update"
        android:backgroundTint="@color/color_secondary"
        app:cornerRadius="15dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/outerLL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/outerLL"
        app:layout_constraintTop_toTopOf="@+id/outerLL" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>